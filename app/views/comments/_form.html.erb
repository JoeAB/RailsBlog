<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label:commenter %><br>
    <%= f.text_field :commenter, :onBlur => "validateCommentCommenter()" %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :onBlur => "validateCommentBody()" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>